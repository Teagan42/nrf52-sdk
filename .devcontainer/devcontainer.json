{
    "name": "nrf5 SDK",
    "image": "uprev/nrf5",
    "remoteUser": "root",
    "privileged": true,
    "mounts": [
        "type=bind,source=/dev/bus/usb,target=/dev/bus/usb"
    ],
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "configureZshAsDefaultShell": true
        },
        "ghcr.io/guiyomh/features/vim": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "nordic-semiconductor.nrf-connect-extension-pack"
            ]
        }
    }
}